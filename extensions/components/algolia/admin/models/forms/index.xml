<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="field-information">
		<field
				name="id"
				type="hidden"
				default="0"
				class="readonly"
				readonly="true"
		/>
		<field
			name="name"
			type="text"
			label="COM_ALGOLIA_FIELD_NAME"
			required="true"
			class="input-xxlarge input-large-text"
			description="COM_ALGOLIA_FIELD_NAME_DESC"
		/>
		<field
			name="extension_id"
			type="algolia.plugin"
			folder="algolia_indexer"
			label="COM_ALGOLIA_INDEX_FIELD_EXTENSION_ID"
			class="form-control input-large-text"
			description="COM_ALGOLIA_INDEX_FIELD_EXTENSION_ID_DESC"
			onchange="document.getElementById('adminForm').style.opacity = '0.3'; submitform('index.reloadEditForm');"
		>
			<option value="">COM_ALGOLIA_INDEX_FIELD_EXTENSION_ID_OPTION_SELECT</option>
		</field>
		<field
			name="application_id"
			type="text"
			label="COM_ALGOLIA_INDEX_FIELD_APPLICATION_ID"
			required="true"
			class="input-xlarge"
			description="COM_ALGOLIA_INDEX_FIELD_APPLICATION_ID_DESC"
		/>
		<field
			name="api_key"
			type="text"
			label="COM_ALGOLIA_INDEX_FIELD_API_KEY"
			required="true"
			class="input-xlarge"
			description="COM_ALGOLIA_INDEX_FIELD_API_KEY_DESC"
		/>
		<field
			name="search_key"
			type="text"
			label="COM_ALGOLIA_INDEX_FIELD_SEARCH_KEY"
			required="true"
			class="input-xlarge"
			description="COM_ALGOLIA_INDEX_FIELD_SEARCH_KEY_DESC"
		/>
		<field
			name="index_name"
			type="text"
			label="COM_ALGOLIA_INDEX_FIELD_INDEX_NAME"
			required="true"
			class="input-xlarge"
			description="COM_ALGOLIA_INDEX_FIELD_INDEX_NAME_DESC"
		/>
		<field
			name="state"
			type="list"
			class="form-control"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			required="true"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	<field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			description="JGLOBAL_FIELD_CREATED_BY_DESC"
		/>
		<field
			name="created_date"
			type="calendar"
			label="JGLOBAL_CREATED_DATE"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc" 
			readonly="true"
			disabled="true"
		/>
		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			readonly="true"
		/>

		<field
			name="modified_date"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="form-control readonly"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc" 
			readonly="true"
			disabled="true"
		/>
	</fieldset>
	<fieldset name="accesscontrol">
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<field 
			name="rules" 
			type="rules" 
			label="JFIELD_RULES_LABEL"
			translate_label="false" 
			filter="rules"
			component="com_algolia" 
			section="index" 
			validate="rules"
		/>
	</fieldset>
	<fields name="params">
	</fields>
</form>
